<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pioresfalasdobolsonaro.raphael.com.minicalculadora.MainActivity"
    android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logocalculadora" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/mostrarResultadoId"
        android:text="0"
        android:clickable="false"
        android:editable="false"
        android:textAlignment="textEnd"
        android:layout_below="@+id/botaoIgualId"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="7"
        android:id="@+id/botao7Id"
        android:layout_below="@+id/mostrarResultadoId"
        android:layout_alignLeft="@+id/mostrarResultadoId"
        android:layout_alignStart="@+id/mostrarResultadoId" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="8"
        android:id="@+id/botao8Id"
        android:layout_alignTop="@+id/botao7Id"
        android:layout_toRightOf="@+id/botao7Id"
        android:layout_toEndOf="@+id/botao7Id"
        android:layout_marginLeft="5dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="9"
        android:id="@+id/botao9Id"
        android:layout_alignTop="@+id/botao8Id"
        android:layout_alignLeft="@+id/botao6Id"
        android:layout_alignStart="@+id/botao6Id" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="4"
        android:id="@+id/botao4Id"
        android:layout_below="@+id/botao7Id"
        android:layout_alignLeft="@+id/botao7Id"
        android:layout_alignStart="@+id/botao7Id" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="5"
        android:id="@+id/botao5Id"
        android:layout_alignTop="@+id/botao4Id"
        android:layout_toRightOf="@+id/botao4Id"
        android:layout_toEndOf="@+id/botao4Id"
        android:layout_marginLeft="5dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="6"
        android:id="@+id/botao6Id"
        android:layout_alignTop="@+id/botao5Id"
        android:layout_toRightOf="@+id/botao5Id"
        android:layout_toEndOf="@+id/botao5Id"
        android:layout_marginLeft="5dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="1"
        android:id="@+id/botao1Id"
        android:layout_below="@+id/botao4Id"
        android:layout_alignLeft="@+id/botao4Id"
        android:layout_alignStart="@+id/botao4Id" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="2"
        android:id="@+id/botao2Id"
        android:layout_alignTop="@+id/botao1Id"
        android:layout_toRightOf="@+id/botao1Id"
        android:layout_toEndOf="@+id/botao1Id"
        android:layout_marginLeft="5dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="3"
        android:id="@+id/botao3Id"
        android:layout_alignTop="@+id/botao2Id"
        android:layout_toRightOf="@+id/botao2Id"
        android:layout_toEndOf="@+id/botao2Id"
        android:layout_marginLeft="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="0"
        android:id="@+id/botao0Id"
        android:layout_below="@+id/botao1Id"
        android:layout_alignLeft="@+id/botao1Id"
        android:layout_alignStart="@+id/botao1Id"
        android:layout_toLeftOf="@+id/botao3Id"
        android:layout_toStartOf="@+id/botao3Id" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text=","
        android:id="@+id/botaoVirgulaId"
        android:layout_alignTop="@+id/botao0Id"
        android:layout_alignRight="@+id/botao3Id"
        android:layout_alignEnd="@+id/botao3Id"
        android:layout_alignLeft="@+id/botao3Id"
        android:layout_alignStart="@+id/botao3Id" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:id="@+id/botaoMaisId"
        android:layout_alignTop="@+id/botaoVirgulaId"
        android:layout_alignRight="@+id/mostrarResultadoId"
        android:layout_alignEnd="@+id/mostrarResultadoId" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="-"
        android:id="@+id/botaoMenosId"
        android:layout_below="@+id/botaoMultiplicarId"
        android:layout_alignLeft="@+id/botaoMultiplicarId"
        android:layout_alignStart="@+id/botaoMultiplicarId" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="*"
        android:id="@+id/botaoMultiplicarId"
        android:layout_alignTop="@+id/botao6Id"
        android:layout_alignLeft="@+id/botaoDivisaoId"
        android:layout_alignStart="@+id/botaoDivisaoId" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="/"
        android:id="@+id/botaoDivisaoId"
        android:layout_below="@+id/mostrarResultadoId"
        android:layout_alignRight="@+id/mostrarResultadoId"
        android:layout_alignEnd="@+id/mostrarResultadoId" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/botaoIgualId"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/mostrarResultadoId"
        android:layout_alignStart="@+id/mostrarResultadoId" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="c"
        android:id="@+id/botaoClearId"
        android:layout_above="@+id/mostrarResultadoId"
        android:layout_alignRight="@+id/mostrarResultadoId"
        android:layout_alignEnd="@+id/mostrarResultadoId" />
</RelativeLayout>
